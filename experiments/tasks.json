{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-pthread", /* для запуска std::async */
                "-std=gnu++17",
                /* "-std=c++2a", */
                /* "-D_GLIBCXX_DEBUG", */
                /* "-D_GLIBCXX_DEBUG_PEDANTIC", */
                /* "-D_LIBCPP_DEBUG=1", */
                "-Wall", // all warnings
                "-Wunused-variable",
                /* "-Werror", */ // Treat warnings as errors
                "-Wextra", // Extra warnings
                "-Wconversion", // Implicit conversion warnings
                "-Wpedantic",
                "-O0", /* отключить все уровни оптимизации */
                "-g",
                /* "${file}", */
                "${fileDirname}/*.cpp", /* <======= Compile all CPP files */
                "-o",
                /* "${fileDirname}/${fileBasenameNoExtension}", */
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-ltbb"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}